      "outDir": "./lib",
      "allowJs": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "noImplicitAny": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "noImplicitThis": true
  },
  "include": [
      "./src/**/*"
  ]
}
